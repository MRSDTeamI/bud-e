<launch>

 <!-- joy node -->
  <node respawn="true" pkg="joystick_hri" type="joy_node" name="joy_node" >
  <param name="dev" type="string" value="/dev/input/js0" />
  <param name="deadzone" value="0.00" />
  </node>

 <!-- Axes -->
  <param name="max_vel_drive_mode" value="500.0" type="double"/>
  <param name="max_vel_turn_mode"  value="500.0" type="double"/>
  <node pkg="hearbo_cart_joy" type="hearbo_ts_cart_joy" name="hearbo_ts_cart_joy"/>

</launch>

